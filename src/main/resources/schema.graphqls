type Query {
    allPokemon: [Pokemon]
    speciesByType(type: PokemonType): [Species]
}

type Pokemon {
    id: ID
    name: String
    species: Species
}

type Species {
    id: ID
    name: String
    type: PokemonType
    pokemons: [Pokemon]
}

type PokemonType {
    NORMAL
    FIRE
    WATER
    GRASS
    FLYING
    FIGHTING
    POISON
    ELECTRIC
    GROUND
    ROCK
    PSYCHIC
    ICE
    BUG
    GHOST
    STEEL
    DRAGON
    DARK
    FAIRY
}
